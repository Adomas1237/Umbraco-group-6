@inherits Umbraco.Web.Mvc.UmbracoTemplatePage


@using System.Web.Mvc.Html
@using ClientDependency.Core.Mvc
@using Umbraco.Web
@using Umbraco.Web.Models
@using Umbraco.Web.Controllers

@{
    var loginStatusModel = Members.GetCurrentLoginStatus();

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
 
    var logoutModel = new PostRedirectModel();

}






<!-- Header
       ============================================= -->
<header id="header" class="full-header">

    <div id="header-wrap">

        <div class="container clearfix">

            <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

            <!-- Logo
            ============================================= -->
            <div id="logo">
               
            <a href="/" class="standard-logo" data-dark-logo="~/Content/images/codegardenlogo.png"><img  style="padding-bottom:2px;" src="~/Content/images/codegardenlogo.png" alt="Canvas Logo"></a>
            </div><!-- #logo end -->
            <!-- Primary Navigation
            ============================================= -->
            <nav id="primary-menu">

                <ul>
                    <li class="current">
                        <a href="/"><div>Home</div></a>
                      
                    </li>
                    <li>
                        <a href="/speakers/"><div>Speakers</div></a>
                       
                    </li>
                    <li>
                        <a href="/schedule/"><div>Schedule</div></a>

                    </li>
                    <li>
                        <a href="/practical-info/"><div>Practical info</div></a>

                    </li>
                    <li>
                        @*Login logout button, which changes according if you are logged in or not*@
                    @if (loginStatusModel.IsLoggedIn)
            {
               

                        using (Html.BeginUmbracoForm<UmbLoginStatusController>("HandleLogout"))
                        {

                            <fieldset>
                                <button class="button button-border button-border-thin button-purple"><i class="icon-lock3"></i>Logout</button>
                            </fieldset>

                            @Html.HiddenFor(m => logoutModel.RedirectUrl)
                        }
                    }
                    else
                    {
                        <fieldset>
                           <a href="/login-page"> <button class="button button-border button-border-thin button-purple"><i class="icon-lock3"></i>Login</button> </a>
                        </fieldset>
                    }
                 </li>
                </ul>
                
                 
                <!-- Top Search
                ============================================= -->
                @*<div id="top-search">
                    <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                    <form action="search.html" method="get">
                        <input type="text" name="q" class="form-control" value="" placeholder="Type &amp; Hit Enter..">
                    </form>
                </div>*@<!-- #top-search end -->

            </nav><!-- #primary-menu end -->

        </div>

    </div>

</header><!-- #header end -->